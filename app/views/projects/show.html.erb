<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
<p>
  <strong>Id:</strong>
  <%= @project.id %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Assets associated to this project:</strong>
  <% for resource in @project.resource %>
    <ul>
      <li><%= image_tag resource.url.to_s, width: '20%' %></li>
    </ul>
  <% end %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

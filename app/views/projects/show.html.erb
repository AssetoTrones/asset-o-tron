<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<div class="row">
    <div class="col-lg-12">
        <h4 class="page-header">Assets associated to this project</h4>
    </div>
    <% for resource in @project.resource %>
      <div class="col-lg-3 col-md-4 col-xs-6 thumb">
          <%= link_to image_tag(resource.url.to_s, :class => 'img-responsive'), {:action => 'show', :controller => 'resources', id: resource }, :class => 'thumbnail' %>

      </div>
    <% end %>
</div>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
